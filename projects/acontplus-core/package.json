{
  "name": "acontplus-core",
  "version": "1.3.0",
  "description": "Core library for Angular applications with repository patterns, use cases, JWT authentication, multi-tenant support, pricing calculations, and HTTP interceptors",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,js,html,css,scss,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,html,css,scss,json,md}\"",
    "format:fix": "npm run format"
  },
  "dependencies": {
    "decimal.js": "^10.6.0",
    "jwt-decode": "^4.0.0",
    "ngx-toastr": "^19.1.0",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0"
  },
  "peerDependencies": {
    "@angular/common": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/router": "^20.0.0"
  },
  "peerDependenciesMeta": {
    "@angular/router": {
      "optional": true
    }
  },
  "sideEffects": false,
  "main": "fesm2022/acontplus-core.mjs",
  "module": "fesm2022/acontplus-core.mjs",
  "typings": "index.d.ts",
  "files": [
    "index.d.ts",
    "*.d.ts",
    "**/*.d.ts",
    "fesm2022/**/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "acontplus",
    "angular",
    "ddd",
    "domain-driven-design",
    "clean-architecture",
    "repository-pattern",
    "use-cases",
    "jwt",
    "authentication",
    "interceptors",
    "http-client",
    "pricing",
    "calculations",
    "utilities",
    "multi-tenant",
    "tenant",
    "correlation",
    "notifications",
    "toastr",
    "response-handler",
    "validators",
    "decimal",
    "environment",
    "services",
    "typescript",
    "frontend",
    "library"
  ],
  "author": "Ivan Paz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Acontplus-S-A-S/acontplus-libs/issues"
  },
  "homepage": "https://github.com/Acontplus-S-A-S/acontplus-libs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Acontplus-S-A-S/acontplus-libs.git"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
