{
  "name": "acontplus-libs",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve --ssl true --no-hmr",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build-library": "ng build acontplus-core && ng build acontplus-ui-components",
    "build-core": "ng build acontplus-core",
    "build-ui": "ng build acontplus-ui-components",
    "build-all": "npm run build-core && npm run build-ui",
    "build:dev": "ng build acontplus-core --configuration development && ng build acontplus-ui-components --configuration development",
    "workspace:install": "npm install",
    "workspace:build": "npm run build-all",
    "workspace:clean": "rimraf dist && rimraf out-tsc",
    "workspace:core": "npm run build-core",
    "workspace:ui": "npm run build-ui",
    "workspace:dev": "npm run build:dev",
    "workspace:info": "npm ls --workspaces",
    "workspace:check": "npm run workspace:info && echo 'Workspace configuration is valid'",
    "workspace:verify": "node scripts/verify-workspace.js",
    "pack-acontplus-core": "cd dist/acontplus-core && npm pack",
    "pack-acontplus-ui-components": "cd dist/acontplus-ui-components && npm pack",
    "build-and-pack": "npm run build-library && npm run pack-acontplus-core && npm run pack-acontplus-ui-components",
    "build:sass": "sass styles/styles.scss assets/styles.css",
    "publish": "npm publish dist/acontplus-ui-components/acontplus-ui-components-0.0.13.tgz",
    "publish:all": "npm run build-and-pack && npm publish dist/acontplus-core && npm publish dist/acontplus-ui-components",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"**/*.{ts,js,html,css,scss,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,html,css,scss,json,md}\"",
    "format:fix": "npm run format",
    "lint:all": "npm run lint && npm run format:check"
  },
  "dependencies": {
    "@angular/animations": "^20.2.2",
    "@angular/cdk": "^20.2.0",
    "@angular/common": "^20.2.2",
    "@angular/compiler": "^20.2.2",
    "@angular/core": "^20.2.2",
    "@angular/forms": "^20.2.2",
    "@angular/material": "^20.2.0",
    "@angular/platform-browser": "^20.2.2",
    "@angular/platform-browser-dynamic": "^20.2.2",
    "@angular/router": "^20.2.2",
    "@jsverse/transloco": "^7.6.1",
    "bootstrap": "^5.3.7",
    "decimal.js": "^10.6.0",
    "jwt-decode": "^4.0.0",
    "ngx-toastr": "^19.0.0",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.2.0",
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.2",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "angular-eslint": "20.2.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "^15.0.0",
    "ng-packagr": "^20.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
