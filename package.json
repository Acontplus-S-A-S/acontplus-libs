{
  "name": "acontplus-libs",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps",
    "packages/*"
  ],
  "scripts": {
    "start": "nx serve demo-app --ssl true --hmr",
    "build": "nx build demo-app",
    "watch": "nx build demo-app --watch --configuration development",
    "test": "nx run-many --target=test --all",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:coverage": "nx run-many --target=test --all --coverage",
    "build:all": "nx run-many --target=build --all",
    "build:libs": "nx run-many --target=build --projects=core,ng-auth,ng-components,ng-customer,ng-infrastructure,ng-notifications,ui-kit,utils",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "prettier --write \"**/*.{ts,js,html,css,scss,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,html,css,scss,json,md}\"",
    "format:fix": "npm run format",
    "lint:all": "npm run lint && npm run format:check",
    "clean": "nx reset",
    "local-registry": "nx run acontplus-libs:local-registry",
    "e2e": "nx run demo-app-e2e:e2e",
    "prepare": "husky"
  },
  "dependencies": {
    "@acontplus/core": "^1.1.0",
    "@acontplus/ng-auth": "^1.2.0",
    "@acontplus/ng-components": "^1.3.0",
    "@acontplus/ng-config": "^1.1.0",
    "@acontplus/ng-customer": "^1.1.0",
    "@acontplus/ng-infrastructure": "^1.1.1",
    "@acontplus/ng-notifications": "^1.1.0",
    "@acontplus/utils": "^1.0.10",
    "@angular/animations": "20.3.2",
    "@angular/cdk": "20.2.5",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/material": "^20.2.5",
    "@angular/platform-browser": "^20.3.2",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.2",
    "@angular/ssr": "20.3.6",
    "@jsverse/transloco": "^8.0.2",
    "bootstrap": "^5.3.8",
    "decimal.js": "^10.6.0",
    "express": "^5.1.0",
    "jsonwebtoken": "9.0.2",
    "jwt-decode": "^4.0.0",
    "ngx-toastr": "^19.1.0",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0",
    "rxjs": "^7.8.2",
    "sweetalert2": "^11.26.2",
    "tabulator-tables": "^6.3.1",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.0",
    "@angular/compiler-cli": "^20.3.2",
    "@jest/globals": "^30.2.0",
    "@nx/angular": "21.6.4",
    "@nx/devkit": "21.6.4",
    "@nx/eslint": "21.6.4",
    "@nx/eslint-plugin": "21.6.4",
    "@nx/jest": "21.6.4",
    "@nx/js": "21.6.4",
    "@nx/playwright": "21.6.4",
    "@nx/rollup": "21.6.4",
    "@nx/vite": "21.6.4",
    "@nx/web": "21.6.4",
    "@nx/workspace": "21.6.4",
    "@playwright/test": "^1.56.0",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.13.20",
    "@swc/helpers": "0.5.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "20.19.9",
    "@types/tabulator-tables": "^6.2.11",
    "@typescript-eslint/utils": "^8.46.0",
    "@vitest/ui": "^3.2.4",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "ajv": "^8.17.1",
    "angular-eslint": "20.3.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-preset-angular": "^14.2.4",
