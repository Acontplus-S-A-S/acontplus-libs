    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,js,html,css,scss,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "nx run-many --target=lint --files"
    ]
  },
  "nx": {
    "includedScripts": []
  }
}
