{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@acontplus-core": ["./dist/acontplus-core"],
      "@acontplus-core/*": ["./dist/acontplus-core/*"],
      "@acontplus-ui-components": ["./dist/acontplus-ui-components"],
      "@acontplus-ui-components/*": ["./dist/acontplus-ui-components/*"],
      "@acontplus/core": ["packages/core/src/index.ts"],
      "@acontplus/ng-components": ["packages/ng-components/src/index.ts"],
      "@acontplus/ng-core": ["packages/ng-core/src/index.ts"],
      "@acontplus/ng-customer": ["packages/ng-customer/src/index.ts"],
      "@acontplus/ui-kit": ["packages/ui-kit/src/index.ts"],
      "@acontplus/utils": ["packages/utils/src/index.ts"],
      "acontplus-core": ["./dist/acontplus-core"],
      "acontplus-customers": ["./dist/acontplus-customers"]
    }
  }
}
